<div class="container">

    <h1>What Your story</h1>

    <div class="row">
        <form action="/stories" method="POST" class="col s12">
            <div class="row">
                <div class="input-field">
                    <input type="text" name="title" id="title">
                    <label for="title">Title</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field">
                   <select name="status" id="status">
                       <option value="Private">Private</option>
                       <option value="public">Public</option>
                       <option value="unpublished">Unpublished</option>
                   </select>
                    <label for="status">Status</label>
                </div>
            </div>

            <div class="row">
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" name="allowcomment"/>
                        <span>Allow Comment</span>
                    </label>
                </p>
            </div>

            <div class="row">
                <div class="input-field">
                   <h5>Tell us storie</h5>
                   <textarea name="body" id="body"></textarea>
                </div>
            </div>

            <input type="submit" value="Submit" class="btn btn-large red lighten-2">


        </form>
    </div>
</div>