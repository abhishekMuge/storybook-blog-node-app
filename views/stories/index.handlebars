<div class="container storie-box p3">
  <h4 class="">Public Stories</h4>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4 card-box">
      <div class="card ">
        <div class="card-image">
         {{#if user}}
            {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class="card-content">
          <blockquote><h4  class="left-align">{{title}}</h4></blockquote>
          <p class="story-text">{{stripTags (truncate body 150)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.avatar}}">
            {{user.firstname}} {{user.lastname}}
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/stories/show/{{id}}">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No stories found</p>
  {{/each}}
</div>
</div>